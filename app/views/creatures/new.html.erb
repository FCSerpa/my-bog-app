<div class="form-horizontal">
	

		<%= form_for @creature do |f| %>
			<div class="form-group">
				<%= f.text_field :name %>
			</div>
			<div class="form-group">
				<%= f.text_area :description %>
			</div>
			<div class="form-group">
			<%= f.submit "save creature" %>
			</div>
		<% end %>

</div>