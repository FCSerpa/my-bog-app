<div class="form-horizontal">
	
	<h2>Edit Monster</h2>

		<%= form_for @creature do |f| %>
			<div class="form-group">
				<%= f.text_field :name, placeholder: "Name" %>
			</div>
			<div class="form-group">
				<%= f.text_area :description, placeholder: "Description" %>
			</div>
			<div class="form-group">
			<%= f.submit "save monster", :class => "btn btn-default" %>
			</div>
		<% end %>

</div>